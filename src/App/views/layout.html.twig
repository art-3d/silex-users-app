<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{% block title '' %}</title>

        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    </head>
    <body>
    <div class="container">

        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('homepage') }}">Homepage</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                    {% if app.user %}
                        <li><a href="{{ path('user.list') }}">Users</a></li>
                    {% endif %}
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                    {% if app.user %}
                        <li><a href="{{ path('user.logout') }}">Logout</a></li>
                    {% else %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('user.login') }}">Login</a></li>
                                <li><a href="{{ path('user.register') }}">Register</a></li>
                            </ul>
                        </li>
                    {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

            {% block content %}{% endblock %}
        </div>

        <script src="{{ asset('js/script.js') }}"></script>

    </body>
</html>
